generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  name            String
  username        String
  email           String
  password        String
  confirmPassword String
  followers       Int
  following       Int
  profilePicture  String
  bio             String
  joinedDate      DateTime @default(now())
  phoneNumber     String
  role            String   @default("user")
  readBooks       Int
  dealingRate     Float
  ratingsQuantity Int
}
